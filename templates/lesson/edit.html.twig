{% block title %}Редактировать урок{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Редактировать урок: {{ lesson.titleLesson }}</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.titleLesson) }}
                {{ form_widget(form.titleLesson, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.titleLesson) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.content) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.orderNumber) }}
                {{ form_widget(form.orderNumber, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.orderNumber) }}
            </div>

            <button class="btn btn-success">Сохранить</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
