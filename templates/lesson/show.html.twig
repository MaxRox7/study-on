{% extends 'base.html.twig' %}

{% block title %}{{ lesson.title }} / {{ course.title }} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ lesson.title }}</h1>
    <p>{{ lesson.content }}</p>
    
    <h3>Course: <a href="{{ path('course_show', {'id': course.id}) }}">{{ course.title }}</a></h3>

    <a href="{{ path('lesson_create', {'courseId': course.id}) }}">Edit</a>
    <a href="{{ path('lesson_delete', {'id': lesson.id}) }}">Delete</a>
{% endblock %}
