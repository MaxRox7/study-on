{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Страница не найдена{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/error-pages.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="error-container">
    <div class="error-content">
        <div class="error-code error-code-404">404</div>
        <h1 class="error-title">Страница не найдена</h1>
        <p class="error-message">
            Похоже, мы не можем найти нужную вам страницу.
            Возможно, она была перемещена или удалена.
        </p>
        <div class="error-actions">
            <a href="{{ path('course_show_all') }}" class="btn btn-primary">
                ← Вернуться к курсам
            </a>
        </div>
    </div>
</div>
{% endblock %}