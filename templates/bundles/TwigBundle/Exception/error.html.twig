{# templates/bundles/TwigBundle/Exception/error.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ошибка сервера{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/error-pages.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="error-container">
    <div class="error-content">
        <div class="error-code error-code-500">500</div>
        <h1 class="error-title">Ошибка сервера</h1>
        <p class="error-message">
            Произошла внутренняя ошибка сервера.
            Мы уже работаем над ее устранением.
        </p>
        <div class="error-actions">
            <a href="{{ path('course_show_all') }}" class="btn btn-primary">
                На главную
            </a>
        </div>
    </div>
</div>
{% endblock %}