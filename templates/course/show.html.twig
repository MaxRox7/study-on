{% block title %}{{ course.titleCourse }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">{{ course.titleCourse }}</h1>
                <div class="text-muted">Код курса: {{ course.symbolCode }}</div>
            </div>

            <div class="card-body">
                {% if course.description %}
                    <div class="mb-4">
                        <h4 class="h5">Описание курса</h4>
                        <p class="card-text">{{ course.description }}</p>
                    </div>
                {% endif %}

                <div class="lessons-section">
                    <h4 class="h5 mb-3">Уроки курса</h4>
                    {% if lessons|length > 0 %}
                        <div class="list-group">
                            {# Сортировка уроков по порядку #}
                            {% set sorted_lessons = lessons|sort((a, b) => a.orderNumber < b.orderNumber ? -1 : 1) %}

                            {% for lesson in sorted_lessons %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="{{ path('lesson_show', { idLesson: lesson.idLesson }) }}" class="text-decoration-none">
                                            <h5 class="mb-1">{{ lesson.titleLesson }}</h5>
                                        </a>
                                    </div>

                                    <div class="d-flex align-items-center gap-3">
                                        <span class="badge bg-primary">Урок {{ loop.index }}</span>
                                        <form method="post" 
                                              action="{{ path('lesson_delete', { idLesson: lesson.idLesson }) }}"
                                              onsubmit="return confirm('Удалить урок «{{ lesson.titleLesson }}»?');">
                                                <input type="hidden" name="_method" value="POST">
                                                <a href="#" class="text-danger" onclick="this.closest('form').submit(); return false;">Удалить</a>
                                        </form>
                                        <a href="{{ path('lesson_edit', { idLesson: lesson.idLesson }) }}" class="btn btn-outline-secondary btn-sm ms-2">Редактировать</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info">Пока нет добавленных уроков</div>
                    {% endif %}
                </div>

                <!-- Форма добавления нового урока -->
                <div class="mt-5">
                    <h4>Добавить новый урок</h4>
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.titleLesson) }}
                            {{ form_widget(form.titleLesson, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.content) }}
                            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.orderNumber) }}
                            {{ form_widget(form.orderNumber, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('course_show_all') }}" class="btn btn-link mt-3">← Назад ко всем курсам</a>
{% endblock %}
