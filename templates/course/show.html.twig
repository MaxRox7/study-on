{# templates/course/show.html.twig #}


{% block title %}{{ course.titleCourse }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h1 class="h3 mb-0">{{ course.titleCourse }}</h1>
                <div class="text-muted">Код курса: {{ course.symbolCode }}</div>
            </div>
            
            <div class="card-body">
                {% if course.description %}
                    <div class="mb-4">
                        <h4 class="h5">Описание курса</h4>
                        <p class="card-text">{{ course.description }}</p>
                    </div>
                {% endif %}

                <div class="lessons-section">
                    <h4 class="h5 mb-3">Уроки курса</h4>
                    {% if course.lessons|length > 0 %}
                        <div class="list-group">
                            {% for lesson in course.lessons %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">{{ lesson.titleLesson }}</h5>
                                            {% if lesson.content %}
                                                <p class="mb-1 text-muted small">{{ lesson.content|u.truncate(100, '...') }}</p>
                                            {% endif %}
                                        </div>
                                        <span class="badge bg-primary rounded-pill">Урок {{ loop.index }}</span>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info">Пока нет добавленных уроков</div>
                    {% endif %}
                </div>
            </div>
        </div>


    </div>
{% endblock %}