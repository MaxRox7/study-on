{# templates/course/show_all.html.twig #}
<link href="{{ asset('build/app.css') }}" rel="stylesheet">



{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center">Все курсы</h1>

    {% if course is empty %}
        <div class="alert alert-info text-center">
            Курсы не найдены.
        </div>
    {% else %}
        <div class="row g-4">
            {% for c in course %}
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100 border-0 rounded-4">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-3">
                                <a href="{{ path('course_show', {'idCourse': c.idCourse}) }}" class="text-decoration-none text-dark">
                                    {{ c.titleCourse }}
                                </a>
                            </h5>
                            <p class="card-text mb-4">
                                <strong>Описание:</strong> {{ c.description ? c.description : 'Нет описания' }}
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="{{ path('course_edit', { idCourse: c.idCourse }) }}" class="btn btn-outline-primary btn-sm">
                                    Редактировать
                                </a>
                                <a href="{{ path('course_delete', {'idCourse': c.idCourse}) }}"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Вы уверены, что хотите удалить этот курс?')">
                                    Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}

    <div class="mt-5 text-center">
        <a href="{{ path('course_create') }}" class="btn btn-success px-4 py-2">+ Создать курс</a>
    </div>
</div>
{% endblock %}
