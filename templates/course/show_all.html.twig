{# templates/course/show_all.html.twig #}
<link href="{{ asset('build/app.css') }}" rel="stylesheet">
{% block title %}Все курсы{% endblock %}

{% block body %}
    <h1>Все курсы</h1>

    {% if course is empty %}
        <p>Курсы не найдены.</p>
    {% else %}
        <ul>
            {% for c in course %}
                <li>
                    <h2><a href="{{ path('course_show', {'idCourse': c.idCourse}) }}">{{ c.titleCourse }}</a></h2>
                    <p><strong>Описание:</strong> {{ c.description ? c.description : 'Нет описания' }}</p>
                    <a href="{{ path('course_edit', { idCourse: c.idCourse }) }}" class="btn btn-warning btn-sm">Редактировать</a>

                    <a href="{{ path('course_delete', {'idCourse': c.idCourse}) }}" 
                       onclick="return confirm('Вы уверены, что хотите удалить этот курс?')">Удалить</a>
                </li>
            {% endfor %}
        </ul>
        <a href="{{ path('course_create')}}" class="btn btn-warning btn-sm">Создать курс</a>
    {% endif %}
{% endblock %}
