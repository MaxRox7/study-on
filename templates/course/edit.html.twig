<link href="{{ asset('build/app.css') }}" rel="stylesheet">

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h1 class="mb-4 text-center">Редактировать курс: {{ course.titleCourse }}</h1>

                    {{ form_start(form) }}
                        <div class="form-floating mb-4">
                            {{ form_widget(form.titleCourse, {'attr': {'class': 'form-control', 'placeholder': 'Название курса'}}) }}
                            {{ form_label(form.titleCourse) }}
                        </div>

                        <div class="form-floating mb-4">
                            {{ form_widget(form.symbolCode, {'attr': {'class': 'form-control', 'placeholder': 'Код курса'}}) }}
                            {{ form_label(form.symbolCode) }}
                        </div>

                        <div class="form-floating mb-4">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'height: 150px;', 'placeholder': 'Описание'}}) }}
                            {{ form_label(form.description) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('course_show_all') }}" class="btn btn-outline-secondary px-4">Назад</a>
                            <button type="submit" class="btn btn-success px-5">Сохранить</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
