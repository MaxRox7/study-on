{% block title %}Создание курса{% endblock %}
<link href="{{ asset('build/app.css') }}" rel="stylesheet">
{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Создать курс</h1>

    <div class="card shadow-lg p-4 rounded">
        <form method="post">
            <div class="mb-3">
                <label for="symbolCode" class="form-label">Код курса</label>
                <input type="text" class="form-control {% if app.session.flashbag.has('error_symbolCode') %}is-invalid{% endif %}" id="symbolCode" name="symbolCode" value="{{ app.request.get('symbolCode') }}" required>
                {% for message in app.session.flashbag.get('error_symbolCode') %}
                    <div class="invalid-feedback">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <div class="mb-3">
                <label for="title_course" class="form-label">Название курса</label>
                <input type="text" class="form-control {% if app.session.flashbag.has('error_title_course') %}is-invalid{% endif %}" id="title_course" name="title_course" value="{{ app.request.get('title_course') }}" required>
                {% for message in app.session.flashbag.get('error_title_course') %}
                    <div class="invalid-feedback">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Описание</label>
                <textarea class="form-control {% if app.session.flashbag.has('error_description') %}is-invalid{% endif %}" id="description" name="description" rows="4">{{ app.request.get('description') }}</textarea>
                {% for message in app.session.flashbag.get('error_description') %}
                    <div class="invalid-feedback">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Создать</button>
                <a href="{{ path('course_show_all') }}" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f7f9fc;
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 600px;
    }

    h1 {
        color: #4a90e2;
        font-weight: 600;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        border-color: #4a90e2;
        box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
    }

    .invalid-feedback {
        font-size: 0.875rem;
        color: #e74a3b;
        margin-top: 5px;
    }

    .btn-primary {
        background-color: #4a90e2;
        border-color: #4a90e2;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #357ab7;
        border-color: #357ab7;
    }

    .btn-secondary {
        background-color: #f1f1f1;
        border-color: #e0e0e0;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #e0e0e0;
        border-color: #d0d0d0;
    }

    .d-flex {
        display: flex;
        justify-content: space-between;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }
</style>
{% endblock %}
