{% block title %}Создание курса{% endblock %}
<link href="{{ asset('build/app.css') }}" rel="stylesheet">

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h1 class="mb-4 text-center">Создать курс</h1>

                    <form method="post">
                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="symbolCode" name="symbolCode" placeholder="Код курса" required>
                            <label for="symbolCode">Код курса</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="text" class="form-control" id="title_course" name="title_course" placeholder="Название курса" required>
                            <label for="title_course">Название курса</label>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea class="form-control" placeholder="Описание курса" id="description" name="description" style="height: 150px;"></textarea>
                            <label for="description">Описание</label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('course_show_all') }}" class="btn btn-outline-secondary px-4">Назад</a>
                            <button type="submit" class="btn btn-primary px-5">Создать</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
